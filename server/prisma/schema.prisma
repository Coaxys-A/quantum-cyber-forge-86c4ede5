generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  OPS
  VIEWER
}

enum ModuleStatus {
  STABLE
  IN_DEV
  DEPRECATED
}

enum ModuleCategory {
  CORE
  AI_ML
  SECURITY
  TELEMETRY
  COMPLIANCE
  ANALYTICS
  OPERATIONS
}

enum InterfaceType {
  REST
  GRPC
  WEBSOCKET
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum StageStatus {
  PENDING
  ACTIVE
  COMPLETED
  ON_HOLD
}

enum ComponentType {
  DIGITAL_TWIN
  ENCLAVE_RUNTIME
  AI_ORCHESTRATOR
  TELEMETRY_MESH
  PQC_LAYER
  SBOM_SERVICE
  POLICY_ENGINE
}

enum HealthStatus {
  HEALTHY
  DEGRADED
  DOWN
}

enum RiskSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum RiskStatus {
  OPEN
  IN_REVIEW
  MITIGATED
  ACCEPTED
  CLOSED
}

enum ControlStatus {
  NOT_IMPLEMENTED
  PARTIALLY_IMPLEMENTED
  IMPLEMENTED
  VERIFIED
}

enum SimulationStatus {
  PENDING
  RUNNING
  PAUSED
  COMPLETED
  FAILED
}

enum SimulationScenario {
  RED_TEAM
  BLUE_TEAM
  PURPLE_TEAM
  PENETRATION_TEST
  COMPLIANCE_AUDIT
}

enum EventSeverity {
  INFO
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
  TRIALING
}

model User {
  id                String             @id @default(uuid())
  email             String             @unique
  hashedPassword    String
  role              UserRole           @default(VIEWER)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  
  refreshTokens     RefreshToken[]
  ownedModules      Module[]
  assignedTasks     Task[]
  ownedRisks        RiskItem[]
  subscription      Subscription?
  
  @@index([email])
}

model RefreshToken {
  id          String   @id @default(uuid())
  userId      String
  tokenHash   String   @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([expiresAt])
}

model Module {
  id              String              @id @default(uuid())
  name            String
  slug            String              @unique
  category        ModuleCategory
  version         String
  status          ModuleStatus        @default(IN_DEV)
  description     String
  ownerUserId     String?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  
  owner           User?               @relation(fields: [ownerUserId], references: [id], onDelete: SetNull)
  interfaces      ModuleInterface[]
  endpoints       ModuleEndpoint[]
  
  @@index([slug])
  @@index([status])
  @@index([category])
}

model ModuleInterface {
  id              String         @id @default(uuid())
  moduleId        String
  type            InterfaceType
  spec            String         // JSON string
  docUrl          String?
  lastVerifiedAt  DateTime?
  createdAt       DateTime       @default(now())
  
  module          Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  @@index([moduleId])
}

model ModuleEndpoint {
  id          String   @id @default(uuid())
  moduleId    String
  method      String
  path        String
  description String
  isMocked    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  @@index([moduleId])
}

model Stage {
  id          String       @id @default(uuid())
  index       Int          @unique
  name        String
  description String
  status      StageStatus  @default(PENDING)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  tasks       Task[]
  
  @@index([index])
}

model Task {
  id             String       @id @default(uuid())
  stageId        String
  title          String
  description    String
  assigneeUserId String?
  status         TaskStatus   @default(TODO)
  priority       TaskPriority @default(MEDIUM)
  dueDate        DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  
  stage          Stage        @relation(fields: [stageId], references: [id], onDelete: Cascade)
  assignee       User?        @relation(fields: [assigneeUserId], references: [id], onDelete: SetNull)
  
  @@index([stageId])
  @@index([status])
}

model Milestone {
  id          String       @id @default(uuid())
  title       String
  description String
  targetDate  DateTime
  status      StageStatus  @default(PENDING)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@index([targetDate])
}

model Component {
  id           String         @id @default(uuid())
  name         String         @unique
  type         ComponentType
  description  String
  riskScore    Float          @default(0)
  healthStatus HealthStatus   @default(HEALTHY)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  
  outgoingEdges ComponentEdge[] @relation("FromComponent")
  incomingEdges ComponentEdge[] @relation("ToComponent")
  
  @@index([name])
}

model ComponentEdge {
  id              String    @id @default(uuid())
  fromComponentId String
  toComponentId   String
  linkType        String
  description     String?
  createdAt       DateTime  @default(now())
  
  fromComponent   Component @relation("FromComponent", fields: [fromComponentId], references: [id], onDelete: Cascade)
  toComponent     Component @relation("ToComponent", fields: [toComponentId], references: [id], onDelete: Cascade)
  
  @@index([fromComponentId])
  @@index([toComponentId])
}

model RiskItem {
  id           String       @id @default(uuid())
  title        String
  description  String
  severity     RiskSeverity
  likelihood   Int          // 1-5
  ownerUserId  String?
  status       RiskStatus   @default(OPEN)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  owner        User?        @relation(fields: [ownerUserId], references: [id], onDelete: SetNull)
  findings     Finding[]
  
  @@index([status])
  @@index([severity])
}

model Control {
  id             String        @id @default(uuid())
  framework      String
  controlId      String
  title          String
  description    String
  status         ControlStatus @default(NOT_IMPLEMENTED)
  evidenceLinks  String?       // JSON array
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  
  @@index([framework])
  @@index([status])
}

model Finding {
  id          String    @id @default(uuid())
  riskItemId  String
  description String
  source      String
  createdAt   DateTime  @default(now())
  resolvedAt  DateTime?
  
  riskItem    RiskItem  @relation(fields: [riskItemId], references: [id], onDelete: Cascade)
  
  @@index([riskItemId])
}

model Simulation {
  id            String             @id @default(uuid())
  name          String
  scenarioType  SimulationScenario
  status        SimulationStatus   @default(PENDING)
  startedAt     DateTime?
  endedAt       DateTime?
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  
  events        SimulationEvent[]
  
  @@index([status])
}

model SimulationEvent {
  id            String         @id @default(uuid())
  simulationId  String
  timestamp     DateTime       @default(now())
  actor         String
  actionType    String
  description   String
  severity      EventSeverity
  metadata      String?        // JSON
  
  simulation    Simulation     @relation(fields: [simulationId], references: [id], onDelete: Cascade)
  
  @@index([simulationId])
  @@index([timestamp])
}

model Plan {
  id            String   @id @default(uuid())
  code          String   @unique
  name          String
  description   String
  priceMonthly  Int      // in cents
  stripePriceId String   @unique
  features      String   // JSON array
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  subscriptions Subscription[]
  
  @@index([code])
}

model Subscription {
  id                 String             @id @default(uuid())
  userId             String             @unique
  planId             String
  status             SubscriptionStatus
  stripeSubscriptionId String?          @unique
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean            @default(false)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan               Plan               @relation(fields: [planId], references: [id])
  invoices           Invoice[]
  
  @@index([userId])
  @@index([status])
}

model Invoice {
  id               String       @id @default(uuid())
  subscriptionId   String
  amount           Int          // in cents
  currency         String       @default("usd")
  stripeInvoiceId  String?      @unique
  status           String
  createdAt        DateTime     @default(now())
  
  subscription     Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  @@index([subscriptionId])
}

model DocPage {
  id              String   @id @default(uuid())
  slug            String   @unique
  title           String
  contentMarkdown String
  category        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([slug])
  @@index([category])
}
